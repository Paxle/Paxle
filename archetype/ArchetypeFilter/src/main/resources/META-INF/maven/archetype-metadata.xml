<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="ArchetypeFilter">
	<fileSets>
		<fileSet filtered="true" packaged="true">
			<directory>src/main/java</directory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
	</fileSets>

	<requiredProperties>
	    <requiredProperty key="groupId">
	      	<defaultValue>com.company.department</defaultValue>
	    </requiredProperty>
	    <requiredProperty key="artifactId">
	      	<defaultValue>myFilter</defaultValue>
	    </requiredProperty>
	    <requiredProperty key="package">
	      	<defaultValue>com.company.department.myFilter</defaultValue>
	    </requiredProperty>
		<requiredProperty key="targetQueues">
			<defaultValue>org.paxle.parser.out</defaultValue>
		</requiredProperty>
		<requiredProperty key="targetQueuePosition">
			<defaultValue>0</defaultValue>
		</requiredProperty>	
	</requiredProperties>
</archetype-descriptor>