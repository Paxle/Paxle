<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
    <field name="peer.name">
        <field-validator type="requiredstring">
        	<param name="trim">true</param>
            <message key="peer.name.required">Peer name required!</message>
        </field-validator>
    </field>
    <field name="peer.address">
        <field-validator type="requiredstring">
        	<param name="trim">true</param>
            <message key="peer.address.required">Peer address required!</message>
        </field-validator>
    </field>
</validators>