<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.paxle</groupId>
	<artifactId>FilterRobotsTxt</artifactId>
	<packaging>bundle</packaging>
	<version>0.1.0-SNAPSHOT</version>
	<name>Paxle - Filter: RobotsTxt</name>
	<url>${paxle.bundleDocUrl}/${pom.artifactId}</url>

	<!-- Parent Project -->
	<parent>
		<groupId>org.paxle</groupId>
		<artifactId>Root</artifactId>
		<version>0.1.0-SNAPSHOT</version>
		<relativePath>../Root/pom.xml</relativePath>
	</parent>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-DocURL>${paxle.bundleDocUrl}/${pom.artifactId}</Bundle-DocURL>
						<!--<Bundle-UpdateLocation>${paxle.bundleUpdateUrl}/${pom.artifactId}</Bundle-UpdateLocation>-->
						<Bundle-RequiredExecutionEnvironment>J2SE-1.5</Bundle-RequiredExecutionEnvironment>
						<Export-Package>
							org.paxle.filter.robots;version="${pom.version}"
						</Export-Package>
						<Import-Package>
							<!-- OSGi framework -->
							org.osgi.framework;version="1.4",
							org.osgi.service.cm;version="1.2",
							<!-- Logging framework -->
							org.apache.commons.logging,
							<!-- Apache Commons HttpClient -->
							org.apache.commons.httpclient.*;version="3.1.0",
							<!-- DB4o Database -->
							com.db4o;resolution:=optional,
							com.db4o.*;resolution:=optional,
							<!-- Ehcache -->
							net.sf.ehcache;version="1.4.1",
							net.sf.ehcache.*;version="1.4.1",
							<!-- Paxle Core Bundle -->
							org.paxle.core.filter;version="[0.1.0,0.2.0)", 
							org.paxle.core.queue;version="[0.1.0,0.2.0)",
							org.paxle.core.doc;version="[0.1.0,0.2.0)"
						</Import-Package>
						<Private-Package>
							org.paxle.filter.robots.impl,
							org.paxle.filter.robots.impl.rules,
							org.paxle.filter.robots.impl.store
						</Private-Package>
						<DynamicImport-Package>
							javax.xml.parsers, 
							org.xml.sax, 
							org.xml.sax.helpers, 
							sun.misc						
						</DynamicImport-Package>
						<Bundle-Activator>
							org.paxle.filter.robots.impl.Activator
						</Bundle-Activator>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.paxle</groupId>
			<artifactId>Core</artifactId>
			<version>[,0.2.0)</version>
			<exclusions>
				<exclusion>
					<groupId>commons-pool</groupId>
					<artifactId>commons-pool</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<!-- http client dependencies -->
		<dependency>
			<groupId>commons-httpclient</groupId>
			<artifactId>commons-httpclient-osgi</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-codec</groupId>
			<artifactId>commons-codec-osgi</artifactId>
		</dependency>		

		<!-- cache dependencies -->
		<dependency>
		    <groupId>net.sf.ehcache</groupId>
		    <artifactId>ehcache</artifactId>
			<exclusions>
				<exclusion>
				    <groupId>net.sf.jsr107cache</groupId>
				    <artifactId>jsr107cache</artifactId>
				</exclusion>
				<exclusion>
				    <groupId>commons-collections</groupId>
				    <artifactId>commons-collections</artifactId>
				</exclusion>				
			</exclusions>		    
		</dependency>
		
		<!-- db4o dependencies -->
		<dependency>
			<groupId>com.db4o</groupId>
			<artifactId>db4o-java5</artifactId>
		</dependency>
		<dependency>
			<groupId>com.db4o</groupId>
			<artifactId>db4o-osgi</artifactId>
		</dependency>					
	</dependencies>
</project>
