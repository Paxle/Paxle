<installation version="1.0">
	<packs>
		<pack id="${artifact.artifactId}" name="${artifact.artifactId}" parent="Desktop" installGroups="all" required="no" preselected="yes">
			<description>${artifact.name} [${artifact.version}]</description>
			
			<!-- ==================================================== 
				 The bundle file(s) 
			     ==================================================== -->
			<file src="${artifact.artifactId}/${artifact.artifactId}.jar" targetdir="$INSTALL_PATH"/>
						
			<!-- ==================================================== 
				 Dependencies solved by other installer packs
			     ==================================================== -->			
			<depends packname="DesktopIntegration"/>
			<depends packname="IndexLucene"/>
		</pack>	
	</packs>
</installation>	
