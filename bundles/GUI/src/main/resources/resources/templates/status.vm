## Define some macros 
#macro( filterlist $queues)
	#if($queues)
	   #set($color = $alternatorTool.auto('r1','r2'))
	   #foreach($queue in $queues)
   	   <table>
		$queue.getFilters().size() filter(s) found:<br />
		#foreach($filter in $queue.getFilters())
		<tr class="$color">
		   <td><tt>$filter.getFilter().getClass().getName()</tt></td>
		</tr>
		#end
	   </table>		
	   #end
	#end
#end
