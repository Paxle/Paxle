## geting required services
#set($monitorAdmin = $manager.getService('org.osgi.service.monitor.MonitorAdmin'))
#set($servletManager = $manager.getService('org.paxle.gui.IServletManager'))
#set($monitorables = $monitorAdmin.getMonitorableNames())

## loading resource-bundle
#if(!$text)
	#set($text = $resourceTool.bundle('OSGI-INF/l10n/overview'))
#end	

<fieldset class="infobox" id="dmemory">
	<legend class="ovMemory">${text.legend.ovMemory}</legend>
		
	#if($manager.getService('org.paxle.gui.IServletManager').hasServlet('/chart'))
		<a href="${servletManager.getFullAlias('/chart')}?display=embedded&amp;t=mem">
			<img class="chart" id="ovMemoryChart" src="${servletManager.getFullAlias('/chart')}?t=mem&amp;w=385&amp;h=200&amp;t=${dateTool.get('yyyy-M-dH:m')}" height="200" width="385" alt="${text.chart.ovMemory.alt}"/>
		</a>
	#end
	<table>
		<tr>
			<th>${text.table.name}</th>
			<th>${text.table.value}</th>
		</tr>
		##
		## Memory usage monitorable
		##
		#if($listTool.contains($monitorables,'java.lang.runtime'))
		<tr>
			<td><b>${text.ovMemory.memUsed}</b></td>
			#set($memUsed = ($monitorAdmin.getStatusVariable('java.lang.runtime/memory.used').getInteger()) / ( 1024 * 1024))
			<td>$numberTool.format($memUsed) MiB</td>
		</tr>
		<tr>
			<td><b>${text.ovMemory.memFree}</b></td>
			#set($memFree = ($monitorAdmin.getStatusVariable('java.lang.runtime/memory.free').getInteger()) / ( 1024 * 1024))
			<td>$numberTool.format($memFree) MiB</td>
		</tr>
		<tr>
			<td><b>${text.ovMemory.memTotal}</b></td>
			#set($memTotal = ($monitorAdmin.getStatusVariable('java.lang.runtime/memory.total').getInteger()) / ( 1024 * 1024))
			<td>$numberTool.format($memTotal) MiB</td>
		</tr>
		#end
		
		##
		## Disk usage monitorable
		##
		#if($listTool.contains($monitorables,'os.disk'))
		<tr>
			<td><b>${text.ovMemory.diskFree}</b></td>
			#set($diskFree = $monitorAdmin.getStatusVariable('os.disk/disk.space.free').getFloat())
			<td>$numberTool.format($diskFree) MiB</td>
		</tr>
		#end
		<tr>
			<td colspan="2">
				<form action="/overview" method="post">
					<div>
						<input type="hidden" name="gc" value="GC" />
						<input type="submit" value="${text.ovMemory.memMisc.runGC}" />
					</div>
				</form>
			</td>
		</tr>
	</table>
	<div class="lastUpdate">
		${text.lastUpdate.insert($dateTool.format('medium',$dateTool.getDate()))}
		&nbsp;<input class="updateControl" type="checkbox" onclick="controlPopulater('infoBoxMemory',this.checked);" checked="checked"/>&nbsp;$text.updateEnabled
	</div>
</fieldset>
