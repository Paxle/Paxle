## Activate onload
#set ( $bodyonload = "initTabs('bundlelist');" )
<h2>Bundle Controlpage</h2>

<ul class="tabs">
	<li><a href="#dbundlelist" onclick="fshow('bundlelist');" id="tbundlelist">Bundle List</a></li>	
	<li><a href="#dbundleinstall" onclick="fshow('bundleinstall');" id="tbundleinstall">Install New Bundle</a></li>
</ul>

<br />
<br />

#if( $errorMsg)
	<p class="error">$errorMsg</p>
#end

<fieldset id="dbundleinstall">
	<legend>Install new Bundle</legend>

    <h4>Install new Bundle from URL</h4><br/>
    <form action="">
    	<p>
    		<input type="text" name="bundlePath" size="60" />
    		<input type="submit" name="installURL" value="Install" />
    	</p>
    </form>
    
    <h4>Install new Bundle via File-Upload</h4>
    <form enctype="multipart/form-data" method="post" action="">
    	<p>
    		<input type="file" name="bundleJar" size="60" />
    		<input type="submit" name="installUpload" value="Install" />
    	</p>
    </form>
</fieldset>


<fieldset id="dbundlelist">
	<legend>Bundle List</legend>
	
	<form action="">
		<p>
			#set( $filters = { 'All':'(Bundle-SymbolicName=*)', 'Paxle: All bundles':'(Bundle-SymbolicName=org.paxle.*)', 'Paxle: All Crawlers':'(Bundle-SymbolicName=org.paxle.Crawler*)', 'Paxle: All Parsers':'(Bundle-SymbolicName=org.paxle.Parser*)'})
			Filter bundles: 			
    		<select name="filter">
				#foreach($entry in $sortTool.sort(${filters.entrySet()}, ["key:asc"]))
					<option value="${entry.value}" #if($filter == ${entry.value})selected="selected"#end>${entry.key}</option>
				#end
			</select>
			<input type="submit" name="OK" />
		</p>
	</form>

    <table>
    	<tr>
			<th>ID</th>
    		<th>Bundle Name</th>
			<th>Version</th>
    		<th>Action</th>
    	</tr>
     	#if( $bundles)
    	#foreach( $entry in $bundles.entrySet())
    	<tr>
			#set($bundleID = $entry.key)
			#set($bundleSymbolicName = $entry.value.symbolicName)
			#set($bundleState = $states.get($entry.value.state))
			#set($bundleHeaders = $entry.value.getHeaders())
			
			<td><a class="$bundleState" href="?bundleID=$bundleID&amp;action=details">$bundleID</a></td>
    		<td class="bundle_$bundleState">
				<a class="$bundleState" href="?bundleID=$bundleID&amp;action=details">
					$bundleHeaders.get('Bundle-Name')
				</a><br/>				
    			<tt>[$bundleSymbolicName]</tt>
				#if($bundleHeaders.get('Bundle-Description'))
					<br/><div class="descriptionText">$bundleHeaders.get('Bundle-Description')</div>
				#end
				#if(($bundleState == 'resolved' || $bundleState == 'installed') && ($bundleHeaders.get("Bundle-Activator")))
					<br/><font color="red">Bundle installed but not started</font>
				#end
    		</td>
			<td><tt>$bundleHeaders.get('Bundle-Version')</tt></td>
    		<td>
    			<form action="">
    				<div>
    					<input type="hidden" name="bundleID" value="$bundleID" />
    					<select name="action">
    						<option value="start">Start</option>
    						<option value="stop">Stop</option>
    						<option value="restart">Restart</option>
    						<option value="update">Update</option>
    						<option value="uninstall">Uninstall</option>
    					</select>
    					<input type="submit" name="OK" value="GO"/>
    				</div>
    			</form>
    		</td>
    	</tr>
    	#end
    	#end
    </table>
</fieldset>