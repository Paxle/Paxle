<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.paxle</groupId>
	<artifactId>ParserBzip2</artifactId>
	<packaging>bundle</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>Paxle - Bzip2-Parser</name>
	<url>http://wiki.paxle.net/dev/bundles/ParserBzip2</url>

	<!-- Parent Project -->
	<parent>
		<groupId>org.paxle</groupId>
		<artifactId>Paxle</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>

	<repositories>
		<repository>
			<id>paxle-repository</id>
			<url>http://repository2.paxle.net/</url>
		</repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>1.2.1</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Export-Package>
							org.paxle.parser.bzip2
						</Export-Package>
						<Import-Package>
							org.osgi.framework, 
							org.paxle.parser, 
							org.paxle.core.doc, 
							org.paxle.parser.iotools, 
							org.paxle.core.io.temp, 
							org.paxle.core.charset,
							org.paxle.core.io
						</Import-Package>
						<Private-Package>
							org.paxle.parser.bzip2.impl
						</Private-Package>
						<Bundle-Activator>
							org.paxle.parser.bzip2.impl.Activator
						</Bundle-Activator>

						<!-- embedding libs -->
						<Embed-StripGroup>true</Embed-StripGroup>
						<Embed-Directory>dependencies</Embed-Directory>
						<Embed-Dependency>
							bzip2;scope=compile|runtime
						</Embed-Dependency>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.paxle</groupId>
			<artifactId>ParserCore</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>org.apache.tools</groupId>
			<artifactId>bzip2</artifactId>
			<version>1.0</version>
		</dependency>
	</dependencies>
</project>
