<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.paxle</groupId>
	<artifactId>SEProviderRssSearch</artifactId>
	<packaging>bundle</packaging>
	<version>0.1.0-SNAPSHOT</version>
	<name>Paxle - Search Engine Provider: RSS Search</name>
	<url>${paxle.bundleDocUrl}/${pom.artifactId}</url>

	<!-- Parent Project -->
	<parent>
		<groupId>org.paxle</groupId>
		<artifactId>Root</artifactId>
		<version>0.1.0-SNAPSHOT</version>
		<relativePath>../Root/pom.xml</relativePath>
	</parent>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>				
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-DocURL>${paxle.bundleDocUrl}/${pom.artifactId}</Bundle-DocURL>
						<!--<Bundle-UpdateLocation>${paxle.bundleUpdateUrl}/${pom.artifactId}</Bundle-UpdateLocation>-->
						<Bundle-RequiredExecutionEnvironment>J2SE-1.5</Bundle-RequiredExecutionEnvironment>
						<Export-Package>
						</Export-Package>
						<Import-Package>
							<!-- OSGi framework -->
							org.osgi.framework;version="1.4",
							<!-- Logging framework -->
							org.apache.commons.logging,
							<!-- Paxle Core Bundle -->
							org.paxle.core.doc;version="[0.1.0,0.2.0)",
							<!-- Paxle Search Engine Bundle -->
							org.paxle.se.search;version="[0.1.0,0.2.0)",
							org.paxle.se.query;version="[0.1.0,0.2.0)",
							org.paxle.se.query.tokens;version="[0.1.0,0.2.0)",
							<!-- Ignoring other classes -->
							!net.sf.hibernate,
							!net.sf.hibernate.*,
							!org.apache.commons.collections,
							!org.apache.commons.collections.*,
							!org.apache.lucene.*,
							!oracle.*,
							!org.jaxen.*,
							!org.saxpath.*,
							!org.apache.xml.resolver.*
						</Import-Package>
						<Private-Package>
							org.paxle.se.provider.rsssearch.impl,
							org.jdom,
							org.jdom.*
						</Private-Package>
						
						<DynamicImport-Package>
							javax.xml.*,
							org.w3c.*,
							org.xml.*,
							sun.io.*
						</DynamicImport-Package>
						
						<Bundle-Activator>
							org.paxle.se.provider.rsssearch.impl.Activator
						</Bundle-Activator>
	
						<Embed-StripGroup>true</Embed-StripGroup>
						<Embed-Directory>dependencies</Embed-Directory>
						<Embed-Dependency>
							informa;scope=compile|runtime,
							jdom;scope=compile|runtime,
							xercesImpl;scope=compile|runtime
						</Embed-Dependency>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.paxle</groupId>
			<artifactId>Core</artifactId>
			<version>[,0.2.0)</version>
			<exclusions>
				<exclusion>
					<groupId>commons-pool</groupId>
					<artifactId>commons-pool</artifactId>
				</exclusion>
			</exclusions>				
		</dependency>
	
		<dependency>
			<groupId>org.paxle</groupId>
			<artifactId>SearchEngine</artifactId>
			<version>[,0.2.0)</version>
		</dependency>		

		<dependency>
			<groupId>informa</groupId>
			<artifactId>informa</artifactId>
			<version>0.6.0</version>
			<exclusions>			
				<exclusion>
					<groupId>lucene</groupId>
					<artifactId>lucene</artifactId>
				</exclusion>
				<exclusion>
					<groupId>lucene</groupId>
					<artifactId>lucene</artifactId>
				</exclusion>		
				<exclusion>
					<groupId>hibernate</groupId>
					<artifactId>hibernate</artifactId>
				</exclusion>
				<exclusion>
					<groupId>cglib</groupId>
					<artifactId>cglib</artifactId>
				</exclusion>
				<exclusion>
					<groupId>commons-lang</groupId>
					<artifactId>commons-lang</artifactId>
				</exclusion>	
				<exclusion>
					<groupId>commons-beanutils</groupId>
					<artifactId>commons-beanutils</artifactId>
				</exclusion>	
				<exclusion>
					<groupId>commons-collections</groupId>
					<artifactId>commons-collections</artifactId>
				</exclusion>
				<exclusion>
					<groupId>dom4j</groupId>
					<artifactId>dom4j</artifactId>
				</exclusion>	
				<exclusion>
					<groupId>odmg</groupId>
					<artifactId>odmg</artifactId>
				</exclusion>	
				<exclusion>
					<groupId>ehcache</groupId>
					<artifactId>ehcache</artifactId>
				</exclusion>
				<exclusion>
					<groupId>hsqldb</groupId>
					<artifactId>hsqldb</artifactId>
				</exclusion>																																							
			</exclusions>		
		</dependency>
		
		<!-- xml parser stuff -->
		<dependency>
			<groupId>xerces</groupId>
			<artifactId>xercesImpl</artifactId>
			<version>2.7.1</version>
		</dependency>
		<dependency>
			<groupId>xml-apis</groupId>
			<artifactId>xml-apis</artifactId>
			<version>1.0.b2</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>xml-apis</groupId>
			<artifactId>xmlParserAPIs</artifactId>
			<version>2.0.2</version>
			<scope>compile</scope>
		</dependency>		
	</dependencies>
</project>
