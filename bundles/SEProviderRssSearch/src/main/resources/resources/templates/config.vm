## Set the page title
#set( $page_title = "Paxle RSS search providers" )

<div>
	<h2>RSS search providers</h2>

	<div>
		#if($manager)
		<fieldset>
		<label>OpenSearch Import</label>
			<div>
				<form action="#" method="post">
				<p>
					Import from XML:<br />
					<input type="text" name="opensearchurl" /><br />
					<input type="submit" value="import" />
				</p>
				</form>
			</div>
			
			<div>
				<form action="#" method="post">
				<p>
					Import from webpage:<br />
					<input type="text" name="opensearchhtmlurl" /><br />
					<input type="submit" value="import" />
				</p>
				</form>
			</div>
		</fieldset>
	</div>

	<div>
	<fieldset>
		<label>RSS-URLs</label>
		<div>
		You can enter your URLs to RSS feeds here. <i>%s</i> will be replaced by the search-phrase.
		</div>
		<div>
			<form action="#" method="post">
				<p>
  					<textarea name="urls" id="urls" cols="80" rows="15">
#foreach ($url in $urls)$url
#end
					</textarea><br />
					<input type="submit" value="OK" />
				</p>
			</form>
		</div>
	</fieldset>
	</div>
	
</div>
#end
