<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>
<assembly>
	<id>installer-web-assembly</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	
	<componentDescriptors>
		<!-- Eclipse equinox related bundles and files -->
		<componentDescriptor>src/main/assembly/components/equinox-all-comp.xml</componentDescriptor>
		<componentDescriptor>src/main/assembly/components/equinox-win-comp.xml</componentDescriptor>
		<componentDescriptor>src/main/assembly/components/equinox-linux-comp.xml</componentDescriptor>			
	</componentDescriptors>

	<!-- copy the installer-pack definition for OSGI -->
	<files>
		<file>
			<source>src/main/resources/installers/packs/equinox.xml</source>
			<destName>pack.xml</destName>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>			
		</file>			
	</files>		
	
	<fileSets>
		<!-- 
			 Copy further installer fragments (if available) 
			 
			 Notes: This fragments need to be copied by the optional 
			        profiles into the target/webinstaller/fragments/ 
			        directory.
		-->	
		<fileSet>
			<directory>target/webinstaller/fragments/</directory>
			<outputDirectory>../../temp/</outputDirectory>
			<filtered>true</filtered>
			<includes>
				<include>*.xml</include>
			</includes>
		</fileSet>
	</fileSets>	
	
	<!-- 
		 Copy data generated by other bundles from
		 <bundleName>/target/webinstaller/
	-->	
	<moduleSets>
		<moduleSet>
			<!-- include all bundles -->
			<includes>
				<include>org.paxle.*:*</include>
			</includes>
			<excludes>
				<exclude>org.paxle:Paxle</exclude>
			</excludes>			

			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>				
				<fileSets>		
					<fileSet>
						<directory>target/webinstaller/</directory>
						<outputDirectory>../</outputDirectory>
						<includes>
							<include>**</include>
						</includes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>	
	
</assembly>	
