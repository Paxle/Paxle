<assembly>
	<id>felix</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<moduleSets>
		<moduleSet>
			<includes>
				<include>org.paxle:Core</include>
				<include>org.paxle:GUI</include>
				<include>org.paxle:SearchEngine</include>
				<include>org.paxle:CrawlerCore</include>
				<include>org.paxle:CrawlerHttp</include>
				<include>org.paxle:ParserCore</include>
				<include>org.paxle:ParserHtml</include>
				<include>org.paxle:Indexer</include>	
				<include>org.paxle:IndexLucene</include>			
				<include>org.paxle:DataLayer</include>
				<include>org.paxle:DataLayerDerby</include>
				<include>org.paxle:FilterBlacklist</include>
				<include>org.paxle:FilterRobotsTxt</include>
				<include>org.paxle:CharsetDetector</include>
				<include>org.paxle:MimeType</include>
			</includes>

			<binaries>
				<outputDirectory>/bundle/</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>
			</binaries>
		</moduleSet>
	</moduleSets>
	<files>
		<file>
			<source>src/main/resources/felix/conf/config.properties</source>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>${felix.dependencies}</directory>
			<outputDirectory>/bundle/</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<exclude>org.apache.felix.main*.jar</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${felix.dependencies}</directory>
			<outputDirectory>/bin/</outputDirectory>
			<includes>
				<include>org.apache.felix.main*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
