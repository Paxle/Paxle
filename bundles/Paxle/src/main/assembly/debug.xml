<assembly>
	<id>debug</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<files>
		<!-- equinox config file -->
		<file>
			<source>src/main/resources/equinox/configuration/config.ini</source>
			<outputDirectory>/configuration/</outputDirectory>
			<filtered>true</filtered>
		</file>
		<!--  log4j config file -->
		<file>
			<source>src/main/resources/logging/log4j.properties</source>
			<outputDirectory>/configuration/</outputDirectory>
			<filtered>false</filtered>
		</file>	
		<!-- startup file -->	
		<file>
			<fileMode>755</fileMode>
			<source>src/main/resources/equinox/start.sh</source>
			<outputDirectory>/</outputDirectory>
			<filtered>false</filtered>
		</file>			
	</files>
	
	<fileSets>
		<fileSet>
			<directory>${equinox.dependencies}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
	</fileSets>	
</assembly>
