<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>
<assembly>
	<id>installer-web-packs-assembly</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>/</baseDirectory>
	
	<fileSets>
		<!-- 
			 Copy further installer fragments (if available) 
			 
			 Notes: This fragments need to be copied by the optional 
			        profiles into the target/webinstaller/fragments/ 
			        directory.
		-->	
		<fileSet>
			<directory>target/webinstaller/fragments/</directory>
			<outputDirectory>temp/</outputDirectory>
			<filtered>true</filtered>
			<includes>
				<include>*.xml</include>
			</includes>
		</fileSet>
	</fileSets>	
	
	<!-- 
	<files>
		<file>
			<source>src/main/resources/installers/webinstaller.jnlp</source>
			<destName>${pom.artifactId}-${pom.version}-webinstaller.jnlp</destName>
			<outputDirectory>dist/</outputDirectory>
			<filtered>true</filtered>			
		</file>			
	</files>
	 -->

	<!-- 
		 Copy data generated by other bundles from
		 <bundleName>/target/webinstaller/
	-->	
	<moduleSets>
		<moduleSet>
			<!-- include all bundles -->
			<includes>
				<include>org.paxle.*:*</include>
			</includes>		

			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>				
				<fileSets>		
					<fileSet>
						<directory>target/webinstaller/</directory>
						<outputDirectory>temp/</outputDirectory>
						<includes>
							<include>**</include>
						</includes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>	
	
</assembly>	
