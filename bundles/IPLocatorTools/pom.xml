<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.paxle</groupId>
	<artifactId>IPLocatorTools</artifactId>
	<packaging>bundle</packaging>
	<version>0.1.3-SNAPSHOT</version>
	<name>Paxle - IPLocatorTool</name>
	<url>http://wiki.paxle.net/dev/bundles/IPLocatorTool</url>

	<!-- Parent Project -->
	<parent>
		<groupId>org.paxle</groupId>
		<artifactId>Root</artifactId>
		<version>0.1.1-SNAPSHOT</version>
		<relativePath>../Root/pom.xml</relativePath>
	</parent>

	<repositories>
		<repository>
			<id>paxle-repository</id>
			<url>http://repository2.paxle.net/</url>
		</repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Export-Package>
							org.paxle.iplocator;version="${pom.version}"
						</Export-Package>
						<Import-Package>
							<!-- OSGi framework -->
							org.osgi.framework;version="1.4",
							<!-- Servlet API -->
							javax.servlet;resolution:=optional,
							javax.servlet.http;resolution:=optional,
							<!-- Paxle Core Bundle -->
							org.paxle.core.io,
							!com.sun.jini.*, 
							!net.jini.*
						</Import-Package>
						<DynamicImport-Package>
							javax.swing
						</DynamicImport-Package>
						<Private-Package>
							org.paxle.iplocator.impl
						</Private-Package>

						<!-- embedding libs -->
						<Embed-StripGroup>true</Embed-StripGroup>
						<Embed-Directory>dependencies</Embed-Directory>
						<Embed-Dependency>
							inetaddresslocator;scope=compile|runtime
						</Embed-Dependency>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.paxle</groupId>
			<artifactId>Core</artifactId>
			<version>[,0.2.0)</version>			
		</dependency>

		<dependency>
			<groupId>javainetlocator</groupId>
			<artifactId>inetaddresslocator</artifactId>
			<version>2.18</version>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<scope>compile</scope>
		</dependency>		
	</dependencies>
</project>
