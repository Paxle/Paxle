<?xml version="1.0" ?>
<!DOCTYPE jdo-conf PUBLIC "-//EXOLAB/Castor JDO Configuration DTD Version 1.0//EN"
                           "http://castor.org/jdo-conf.dtd">

<jdo-conf>
	<database name="paxle" engine="derby">
		<driver url="jdbc:derby:paxle;create=true" class-name="org.apache.derby.jdbc.EmbeddedDriver">
			<param name="user" value=""/>
			<param name="password" value=""/>
		</driver>
		<mapping href="resources/castor/sql_command.xml"/>
	</database>
    <transaction-demarcation mode="local">
        <transaction-manager name="local" />
    </transaction-demarcation>
</jdo-conf>