<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
    <class name="org.paxle.core.doc.IIndexerDocument" table="IndexerDocument" lazy="false">
        <id name="OID" column="id">
            <generator class="native"/>
        </id>
        
        <!-- status -->
        <property name="status">
			<type name="org.paxle.data.db.impl.EnumUserType">
				<param name="enumClassName">org.paxle.core.doc.IIndexerDocument$Status</param>
			</type>
      	</property>
      	<property name="statusText"/>
   	 	 
		<!-- Index-doc fields -->
       <map name="fields" table="IndexerDocumentFields" lazy="false" cascade="all">
            <key column="indexerDocID" not-null="true"/>
            <index type="org.paxle.data.db.impl.FieldTypeUserType">
            	<column name="name" length="80"/>
				<column name="clazz"/>
				<column name="isIndex"/>
				<column name="isSavePlain"/>
            </index>
            <element column="fieldValue" type="org.paxle.data.db.impl.FieldValueUserType" length="4096"/>
        </map>		
		
    </class>     
</hibernate-mapping>