<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.paxle</groupId>
	<artifactId>IconTools</artifactId>
	<packaging>bundle</packaging>
	<version>0.1.5-SNAPSHOT</version>
	<name>Paxle - Tools: Icon</name>
	<url>${paxle.bundleDocUrl}/${pom.artifactId}</url>

	<!-- Parent Project -->
	<parent>
		<groupId>org.paxle</groupId>
		<artifactId>Root</artifactId>
		<version>0.1.1-SNAPSHOT</version>
		<relativePath>../Root/pom.xml</relativePath>
	</parent>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<!-- localized bundle headers -->
						<Bundle-Localization>OSGI-INF/l10n/bundle</Bundle-Localization>
						<Bundle-Name>%bundleName</Bundle-Name>
						<Bundle-Description>%bundleDesc</Bundle-Description>
						
						<Bundle-Category>tools</Bundle-Category>										
						<Bundle-DocURL>${paxle.bundleDocUrl}/${pom.artifactId}</Bundle-DocURL>
						<!--<Bundle-UpdateLocation>${paxle.bundleUpdateUrl}/${pom.artifactId}</Bundle-UpdateLocation>-->
						<Bundle-RequiredExecutionEnvironment>J2SE-1.5</Bundle-RequiredExecutionEnvironment>
						
						<Export-Package>
							org.paxle.icon;version="${pom.version}"
						</Export-Package>
						<Import-Package>
							<!-- OSGi framework -->
							org.osgi.framework;version="1.4", 
							org.osgi.service.component;version="1.0",
							<!-- Logging framework -->
							org.apache.commons.logging,
							org.apache.log4j,
							<!-- Ehcache -->
							net.sf.ehcache;version="1.6.2",
							net.sf.ehcache.config;version="1.6.2",
							net.sf.ehcache.*;version="1.6.2",
							<!-- Apache Commons HttpClient -->
							org.apache.commons.httpclient.*;version="3.1.0",
							<!-- Servlet API -->
							javax.servlet, 
							javax.servlet.http,
							<!-- Paxle Core Bundle -->
							org.paxle.core.io;version="[0.1.0,0.2.0)",
							<!-- ignoring compile time annotations -->
							!javax.annotation
						</Import-Package>
						<DynamicImport-Package>
							javax.imageio, 
							javax.imageio.spi,
							javax.imageio.metadata,
							javax.imageio.stream,
							javax.swing,
							javax.swing.border,
							javax.swing.text.html, 
							javax.swing.text.html.parser, 
							javax.swing.text,
							javax.swing.filechooser,
							org.w3c.dom,
							javax.crypto, 
							javax.crypto.spec, 
							javax.net, 
							javax.net.ssl
						</DynamicImport-Package>
						<Private-Package>
							org.paxle.icon.impl
						</Private-Package>
						
						<!-- embedding libs -->
						<Embed-StripGroup>true</Embed-StripGroup>
						<Embed-Directory>dependencies</Embed-Directory>
						<Embed-Dependency>
							aclib;scope=compile|runtime
						</Embed-Dependency>						
					</instructions>
				</configuration>
			</plugin>	
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.paxle</groupId>
			<artifactId>Core</artifactId>
			<version>[0.1.27-SNAPSHOT,0.2.0)</version>			
		</dependency>

		<dependency>
			<groupId>com.ctreber</groupId>
			<artifactId>aclib</artifactId>
			<version>3.0-java5</version>
		</dependency>
		<dependency>
		    <groupId>net.sf.ehcache</groupId>
		    <artifactId>ehcache</artifactId>
		    <version>1.6.2</version>
			<exclusions>
				<exclusion>
				    <groupId>commons-collections</groupId>
				    <artifactId>commons-collections</artifactId>
				</exclusion>				
			</exclusions>		    
		</dependency>
		<dependency>
			<groupId>commons-httpclient</groupId>
			<artifactId>commons-httpclient-osgi</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-codec</groupId>
			<artifactId>commons-codec</artifactId>
		</dependency>		
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.4</version>
		</dependency>		
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.13</version>
			<exclusions>
				<exclusion>
					<groupId>com.sun.jdmk</groupId>
					<artifactId>jmxtools</artifactId>
				</exclusion>
				<exclusion>
					<groupId>javax.jms</groupId>
					<artifactId>jms</artifactId>
				</exclusion>
				<exclusion>
					<groupId>com.sun.jmx</groupId>
					<artifactId>jmxri</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>
</project>
