<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.paxle</groupId>
	<artifactId>ParserFeed</artifactId>
	<packaging>bundle</packaging>
	<version>0.1.1-SNAPSHOT</version>
	<name>Paxle - Parser: RSS/Atom/OPML</name>
	<url>${paxle.bundleDocUrl}/${pom.artifactId}</url>

	<!-- Parent Project -->
	<parent>
		<groupId>org.paxle</groupId>
		<artifactId>Root</artifactId>
		<version>0.1.0-SNAPSHOT</version>
		<relativePath>../Root/pom.xml</relativePath>
	</parent>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<!-- localized bundle headers -->
						<Bundle-Localization>OSGI-INF/l10n/bundle</Bundle-Localization>
						<Bundle-Name>%bundleName</Bundle-Name>
						<Bundle-Description>%bundleDesc</Bundle-Description>
						
						<Bundle-Category>parser</Bundle-Category>					
						<Bundle-DocURL>${paxle.bundleDocUrl}/${pom.artifactId}</Bundle-DocURL>
						<!--<Bundle-UpdateLocation>${paxle.bundleUpdateUrl}/${pom.artifactId}</Bundle-UpdateLocation>-->
						<Bundle-RequiredExecutionEnvironment>J2SE-1.5</Bundle-RequiredExecutionEnvironment>
						
						<Export-Package>
							org.paxle.parser.feed;version="${pom.version}"
						</Export-Package>
						<Import-Package>
							<!-- OSGi framework -->
							org.osgi.framework;version="1.4",
							<!-- Logging Framework -->
							org.apache.commons.logging,
							<!-- Paxle Core -->
							org.paxle.core.doc;version="[0.1.0,0.2.0)",
							org.paxle.core.io.temp;version="[0.1.0,0.2.0)",
							<!-- Paxle Parser Core -->
							org.paxle.parser;version="[0.1.0,0.2.0)",
							<!-- Classes required for XML Parsing -->
							<!-- org.jdom, org.jdom.input, org.jdom.output, -->
							<!-- ignoring the rest -->
							!net.sf.hibernate, 
							!net.sf.hibernate.*,
							!org.apache.commons.collections,
							!org.apache.commons.collections.*,
							!org.apache.lucene.*,
							!org.apache.xml.resolver.*,
							!oracle.*,!org.jaxen.*,!org.saxpath.*
						</Import-Package>
						<Private-Package>
							org.paxle.parser.feed.impl,
							org.jdom, org.jdom.*
						</Private-Package>
						<Bundle-Activator>
							org.paxle.parser.feed.impl.Activator
						</Bundle-Activator>

						<DynamicImport-Package>
							javax.xml.*, org.w3c.*, org.xml.*, sun.io.*
						</DynamicImport-Package>

						<Embed-StripGroup>true</Embed-StripGroup>
						<Embed-Directory>dependencies</Embed-Directory>
						<Embed-Dependency>
							informa;scope=compile|runtime,
							jdom;scope=compile|runtime,
							xercesImpl;scope=compile|runtime
						</Embed-Dependency>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.paxle</groupId>
			<artifactId>ParserCore</artifactId>
			<version>[,0.2.0)</version>
		</dependency>

		<dependency>
			<groupId>informa</groupId>
			<artifactId>informa</artifactId>
			<version>0.6.0</version>
			<exclusions>
				<exclusion>
					<groupId>lucene</groupId>
					<artifactId>lucene</artifactId>
				</exclusion>
				<exclusion>
					<groupId>lucene</groupId>
					<artifactId>lucene</artifactId>
				</exclusion>
				<exclusion>
					<groupId>hibernate</groupId>
					<artifactId>hibernate</artifactId>
				</exclusion>
				<exclusion>
					<groupId>cglib</groupId>
					<artifactId>cglib</artifactId>
				</exclusion>
				<exclusion>
					<groupId>commons-lang</groupId>
					<artifactId>commons-lang</artifactId>
				</exclusion>
				<exclusion>
					<groupId>commons-beanutils</groupId>
					<artifactId>commons-beanutils</artifactId>
				</exclusion>
				<exclusion>
					<groupId>commons-collections</groupId>
					<artifactId>commons-collections</artifactId>
				</exclusion>
				<exclusion>
					<groupId>dom4j</groupId>
					<artifactId>dom4j</artifactId>
				</exclusion>
				<exclusion>
					<groupId>odmg</groupId>
					<artifactId>odmg</artifactId>
				</exclusion>
				<exclusion>
					<groupId>ehcache</groupId>
					<artifactId>ehcache</artifactId>
				</exclusion>
				<exclusion>
					<groupId>hsqldb</groupId>
					<artifactId>hsqldb</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>xerces</groupId>
			<artifactId>xercesImpl</artifactId>
			<version>2.7.1</version>
		</dependency>
		<dependency>
			<groupId>xml-apis</groupId>
			<artifactId>xml-apis</artifactId>
			<version>1.0.b2</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>xml-apis</groupId>
			<artifactId>xmlParserAPIs</artifactId>
			<version>2.0.2</version>
			<scope>compile</scope>
		</dependency>
		
		<!-- Additional dependencies for testing -->
		<dependency>
			<groupId>org.paxle</groupId>
			<artifactId>ParserCore</artifactId>
			<version>[,0.2.0)</version>
			<classifier>tests</classifier>
			<scope>test</scope>
		</dependency>
		
		<dependency>
			<groupId>org.paxle</groupId>
			<artifactId>ParserHtml</artifactId>
			<version>[,0.2.0)</version>
			<scope>test</scope>
		</dependency>		
	</dependencies>
</project>
